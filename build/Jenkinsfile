pipeline {
  agent {
    dockerfile {
      dir 'build'
      label 'docker'
      args '-v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  environment {
    DOCKER_TAG = "chappio/clearcloud:${env.BUILD_TAG}"
  }
  stages {
    stage('Build') {
      steps {
        // Build the frontend
        sh 'yarn --cwd install --frozen-lockfile'
        sh 'yarn --cwd build'
        // Build the backend
        sh "mkdir -p build/output"
        sh "go build -o build/output/clearcloud-linux-x64 ./main.go"
      }
    }
  }
}