pipeline {
  agent {
    dockerfile {
      dir 'build'
      label 'docker'
      args '-v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  environment {
    DOCKER_TAG = "chappio/clearcloud:${env.BUILD_TAG}"
    CGO_ENABLE = "0"
  }
  stages {
    stage('Test') {
      parallel {
        stage('Backend') {
          steps {
             sh "go mod download"
             sh "go test -v -coverprofile=coverage.out ./... 2>&1 | go-junit-report > junit.xml"
          }
          post {
            always {
              junit 'junit.xml'
            }
          }
        }
        stage('Frontend') {
          steps {
            sh 'yarn --cwd web install --frozen-lockfile'
            sh 'yarn --cwd web lint  -f json -o eslint-report.json || true'
            sh 'yarn --cwd web test --ci --reporters=default --reporters=jest-junit'
          }
          post {
            always {
              junit 'web/junit.xml'
            }
          }
        }
      }
    }
    stage('Sonar') {
      environment {
        SONAR_LOGIN = credentials('SONAR_LOGIN')
      }
      steps {
        sh 'sonar-scanner -Dsonar.login="$SONAR_LOGIN"'
      }
    }
  }
}